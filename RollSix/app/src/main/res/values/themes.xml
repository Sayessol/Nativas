    <style name="Theme.RollSix.Fullscreen" parent="Theme.RollSix">
        <item name="android:actionBarStyle">@style/Widget.Theme.RollSix.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.RollSix.FullscreenContainer" parent="">
